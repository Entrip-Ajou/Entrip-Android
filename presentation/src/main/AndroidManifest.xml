<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application>

        <activity android:name=".views.activity.SplashActivity"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTask"
            android:exported="true"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".views.activity.IntroActivity"
            android:exported="false"/>
        <activity android:name=".views.activity.SignInActivity"
            android:exported="false"/>
        <activity android:name=".views.activity.SignUpActivity"
            android:exported="false"/>

    </application>

</manifest>