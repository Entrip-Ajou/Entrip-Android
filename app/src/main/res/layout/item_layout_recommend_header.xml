<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_rocommend_layout">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/recommend_top"
        android:textColor="#272727"
        android:textStyle="bold"
        android:textSize="24sp"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="10sp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/recommend_middle"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="#272727"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="19sp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/recomAct_testBtn"
        android:layout_width="258dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_btn_round_recommend"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="72dp"
        android:text="여행 성향 테스트 하기"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#0d82eb"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

</androidx.constraintlayout.widget.ConstraintLayout>